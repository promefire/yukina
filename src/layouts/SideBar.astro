---
const { toc } = Astro.props;
---

<div class="side-bar">
  <!-- 其他侧边栏内容 -->
  // ... existing code ...
  
  <!-- 分离目录到独立的粘性容器 -->
  <div class="aside-bottom">
    {toc && (
      <div class="aside-bottom-toc aside-card">
        <TableOfContents toc={toc} />
      </div>
    )}
  </div>
</div>

<style>
  .side-bar {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
  }
  
  .aside-bottom {
    position: sticky;
    top: 80px; /* 距离顶部的距离 */
    z-index: 10;
    margin-left: 20px;
    width: min(260px, 20vw);
  }
  
  .aside-card {
    width: calc(100% - 20px);
    border-radius: 10px;
    background: var(--background-primary, #fff);
    box-shadow: 0 1px 3px hsla(0, 0%, 7%, 0.1);
    padding: 15px;
    border: 1px solid rgba(18, 24, 58, 0.06);
    transition: background 0.3s ease-out;
    margin-bottom: 20px;
  }
  
  /* 响应式设计 */
  @media (max-width: 960px) {
    .aside-bottom {
      position: relative;
      top: auto;
      margin-left: 0;
      width: 100%;
    }
  }
</style>