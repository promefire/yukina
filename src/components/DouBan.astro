---
const res = await fetch('http://localhost:4321/api/douban');
const data = await res.json();

type DoubanItem = {
  title: string;
  link: string;
  rating: string;
  poster: string;
  pubDate: string;
  status: string;
  type: string;
  comment?: string;
};

type SectionData = {
  [key: string]: DoubanItem[];
};
---

<div class="douban-container">
  <h1 class="main-title">我的豆瓣动态</h1>
  
  <!-- 影视部分 -->
  <section class="media-section">
    <h2 class="section-title">📺 影视</h2>
    <div class="status-tabs">
      <div class="status-group">
        <h3 class="status-title">在看 ({data.movies.watching.length})</h3>
        <div class="items-grid">
          {data.movies.watching.map((item: DoubanItem) => (
            <div class="item-card">
              <a href={item.link} class="item-link">
                <img src={item.poster} alt={item.title} class="item-poster" />
                <div class="item-info">
                  <h4 class="item-title">{item.title}</h4>
                  <p class="item-rating">{item.rating}</p>
                  <p class="item-date">{item.pubDate}</p>
                  {item.comment && <p class="item-comment">{item.comment}</p>}
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>
      
      <div class="status-group">
